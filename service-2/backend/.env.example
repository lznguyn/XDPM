# ============================================================================
# Environment variables for Music Transcriber Microservice
# ============================================================================
# Copy this file to .env and adjust values for your deployment

# Server host: 0.0.0.0 = listen on all interfaces (local + network)
#              127.0.0.1 = localhost only
HOST=0.0.0.0

# Server port
PORT=8000

# Auto-reload on code changes (development only; set to false for production)
RELOAD=false

# API endpoint prefix. Empty string = routes at /trans, /trans/midi/{file}
# Set to /api/v1 = routes at /api/v1/trans, /api/v1/trans/midi/{file}, /api/v1/outputs
API_PREFIX=/api/v1

# CORS: allowed origins for cross-origin requests
# Set to "*" to allow all origins (development/testing only!)
# Set to comma-separated list for specific origins:
#   https://example.com,https://frontend.example.com
# Leave empty or unset to allow all (*)
ALLOWED_ORIGINS=
